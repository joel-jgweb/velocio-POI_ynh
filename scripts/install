#!/bin/bash
# scripts/install

# Charger les helpers YunoHost
source /usr/share/yunohost/helpers || {
    echo "âŒ Impossible de charger les helpers YunoHost."
    exit 1
}

# RÃ©cupÃ©rer les arguments YunoHost
app="${YNH_APP_INSTANCE_NAME}"
domain="${YNH_APP_ARG_DOMAIN}"
path="${YNH_APP_ARG_PATH}"
is_public="${YNH_APP_ARG_IS_PUBLIC}"
final_path="/var/www/$app"

# === DEBUG : afficher l'environnement ===
echo "=== DEBUG : PWD = $PWD"
echo "=== DEBUG : Contenu du dossier courant (scripts) ==="
ls -l
echo "=== DEBUG : Contenu du dossier parent ==="
ls -l ..
echo "=== DEBUG : Contenu de ../velocio-POI (si prÃ©sent) ==="
ls -l ../velocio-POI || echo "velocio-POI absent !"

# 1. CrÃ©er le dossier final et copier le code
mkdir -p "$final_path"
cp -a ../velocio-POI "$final_path/"

# === ðŸ”§ CORRECTION : CrÃ©er le dossier de donnÃ©es avec bons droits ===
DATA_DIR="$final_path/data"
mkdir -p "$DATA_DIR/cache" "$DATA_DIR/output"
chown -R www-data:www-data "$DATA_DIR"
chmod -R 755 "$DATA_DIR"

# VÃ©rifier la copie
echo "=== DEBUG : Contenu de $final_path/velocio-POI aprÃ¨s copie ==="
ls -l "$final_path/velocio-POI"

# 2. VÃ©rifier et installer pip3 si nÃ©cessaire
if ! command -v pip3 > /dev/null; then
    echo "pip3 non trouvÃ©, installation..."
    apt update
    apt install -y python3-pip
fi

# 3. CrÃ©er l'environnement virtuel Python
python3 -m venv "$final_path/venv"

# 4. Installer les dÃ©pendances
"$final_path/venv/bin/pip" install --upgrade pip
"$final_path/venv/bin/pip" install -r "$final_path/velocio-POI/requirements.txt"

# 5. CrÃ©er le service systemd
cat > /etc/systemd/system/${app}.service <<EOF
[Unit]
Description=Velocio POI Flask App (YunoHost)
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=${final_path}/velocio-POI/src
ExecStart=${final_path}/venv/bin/python server.py
Restart=always

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable ${app}

# 6. DÃ©marrer le service
systemctl start ${app}

# 7. CrÃ©er la configuration Nginx
nginx_conf="/etc/nginx/conf.d/${domain}.d/${app}.conf"
mkdir -p "/etc/nginx/conf.d/${domain}.d"

cat > "$nginx_conf" <<EOF
location ${path}/ {
    proxy_pass http://127.0.0.1:5000/;
    proxy_set_header Host \$host;
    proxy_set_header X-Real-IP \$remote_addr;
    proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto \$scheme;
}
EOF

systemctl reload nginx

echo "âœ… Velocio Traces & Spots installÃ© et dÃ©marrÃ© sur http://${domain}${path}"