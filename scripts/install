#!/bin/bash

# ğŸ”¥ Charger les helpers YunoHost
source /usr/share/yunohost/helpers || {
    echo "âŒ Impossible de charger les helpers YunoHost. VÃ©rifiez que YunoHost est installÃ©."
    exit 1
}

# ğŸ“¥ Arguments passÃ©s par YunoHost
app="${1:-}"
domain="${2:-}"
path="${3:-}"
is_public="${4:-1}"

# âœ… VÃ©rifications
[ -z "$app" ] && ynh_die "âŒ Le nom de l'application (arg1) est manquant."
[ -z "$domain" ] && ynh_die "âŒ Le domaine (arg2) est manquant."
[ -z "$path" ] && ynh_die "âŒ Le chemin (arg3) est manquant."

# ğŸ“ Chemins
final_path="/var/www/$app"
src_dir="$final_path/velocio-POI"

# ğŸ”§ Copier les fichiers
ynh_setup_source_tree
ynh_copy_source "velocio-POI" "$src_dir"

# ğŸ—ï¸ Dossier utilisateur
user_data_dir="/home/yunohost.app/.velocio_poi"
mkdir -p "$user_data_dir"

# âš™ï¸ Enregistrer les paramÃ¨tres
ynh_app_setting --app="$app" --key="domain" --value="$domain"
ynh_app_setting --app="$app" --key="path" --value="$path"
ynh_app_setting --app="$app" --key="is_public" --value="$is_public"

# ğŸ” Permissions SSO
if [ "$is_public" = "yes" ]; then
    ynh_permission_update --app "$app" --perm main --allowed all_users
else
    ynh_permission_update --app "$app" --perm main --protected true
fi

# ğŸ”„ GÃ©nÃ©rer la config Nginx
ynh_nginx_generate_config

# ğŸ”„ Recharger Nginx
ynh_service_reload_or_restart nginx

# ğŸ§¹ Nettoyer
ynh_clean_setup

echo "âœ… Velocio Traces & Spots installÃ© avec succÃ¨s sur http://$domain$path"